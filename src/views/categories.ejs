<%- include('partials/layout_start', { title: 'Categories' }) %>

    <section class="categories-section">
        <h1 style="border: none; margin-bottom: 2rem;">Content Map & Categories</h1>

        <% if (allCategories && allCategories.length> 0) { %>
            <div class="category-list"
                style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 1rem;">
                <% allCategories.forEach(function(cat) { %>
                    <a href="/categoria/<%= cat.category %>" class="category-card"
                        style="padding: 1.25rem; background: #f8f9fa; border: 1px solid var(--border-color); border-radius: var(--radius); text-decoration: none; color: var(--text-main); font-weight: 600; display: flex; align-items: center; gap: 0.75rem; transition: all 0.2s;">
                        <i class="ph ph-hash" style="color: var(--primary-color);"></i>
                        <%= cat.category %>
                    </a>
                    <% }); %>
            </div>
            <% } else { %>
                <div class="empty-state"
                    style="text-align: center; padding: 3rem; background: #f8f9fa; border-radius: var(--radius); border: 2px dashed var(--border-color);">
                    <p style="color: var(--text-muted);">No categories have been created yet.</p>
                </div>
                <% } %>
    </section>

    <style>
        .category-card:hover {
            background: white;
            border-color: var(--primary-color);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
    </style>

    <%- include('partials/layout_end') %>