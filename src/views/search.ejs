<%- include('partials/layout_start', { title: 'Search Results' }) %>

    <section class="search-header" style="margin-bottom: 2rem;">
        <h1 style="border: none; font-size: 2rem;">Search results for "<%= query %>"</h1>
        <p style="color: var(--text-muted);">
            <%= results ? results.length : 0 %> matches found.
        </p>
    </section>

    <% if (results && results.length> 0) { %>
        <div class="search-results">
            <% results.forEach(function(item) { %>
                <article class="search-item"
                    style="margin-bottom: 2.5rem; padding-bottom: 1.5rem; border-bottom: 1px solid var(--border-color);">
                    <h2 style="margin-bottom: 0.5rem; border: none; font-size: 1.25rem;">
                        <a href="/wiki/<%= item.slug %>"
                            style="color: var(--primary-color); text-decoration: none; font-weight: 700;">
                            <%= item.title %>
                        </a>
                    </h2>
                    <p style="color: var(--text-main); font-size: 0.95rem; line-height: 1.6;">
                        <%= item.content.substring(0, 250) %>...
                    </p>
                    <div style="margin-top: 1rem;">
                        <a href="/wiki/<%= item.slug %>"
                            style="font-size: 0.85rem; color: var(--primary-color); text-decoration: none; font-weight: 600;">Read
                            more â†’</a>
                    </div>
                </article>
                <% }); %>
        </div>
        <% } else { %>
            <div class="empty-state"
                style="text-align: center; padding: 4rem; background: #f8f9fa; border-radius: var(--radius); border: 2px dashed var(--border-color);">
                <i class="ph ph-magnifying-glass"
                    style="font-size: 3rem; color: #adb5bd; margin-bottom: 1rem; display: block;"></i>
                <p style="color: var(--text-muted); margin-bottom: 1.5rem;">No results found for "<%= query %>". Try
                        different keywords or check for typos.</p>
                <a href="/" class="btn-primary">Back to Home</a>
            </div>
            <% } %>

                <%- include('partials/layout_end') %>