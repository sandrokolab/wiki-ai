<%- include('partials/layout_start', { title: page.title }) %>

    <article class="wiki-article">
        <nav class="breadcrumb" style="font-size: 0.85rem; color: var(--text-muted); margin-bottom: 0.5rem;">
            <a href="/" style="color: inherit; text-decoration: none;">Wiki AI</a>
            <i class="ph ph-caret-right" style="font-size: 0.7rem; margin: 0 0.5rem;"></i>
            <% if (page.category) { %>
                <a href="/categoria/<%= page.category %>" style="color: inherit; text-decoration: none;">
                    <%= page.category %>
                </a>
                <% } %>
        </nav>

        <div class="topic-indicator" style="margin-bottom: 0.5rem;">
            <% if (page.category) { %>
                <span style="font-size: 0.85rem; color: var(--text-muted); font-weight: 500;">
                    Part of <a href="/categoria/<%= page.category %>"
                        style="color: var(--primary-color); text-decoration: none; font-weight: 600;">
                        <%= page.category %>
                    </a>
                </span>
                <% } %>
        </div>

        <div class="article-header" style="margin-bottom: 2rem;">
            <div style="display: flex; justify-content: space-between; align-items: flex-start; gap: 2rem;">
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                    <div class="page-status-icons"
                        style="display: flex; gap: 0.5rem; color: var(--text-muted); font-size: 1.5rem;">
                        <% if (page.status==='draft' ) { %>
                            <i class="ph ph-file-dashed draft-icon" title="Draft"></i>
                            <% } else { %>
                                <i class="ph ph-file-text" title="Published"></i>
                                <% } %>
                                    <% if (page.is_verified) { %>
                                        <i class="ph ph-seal-check verified-icon" title="Verified"></i>
                                        <% } %>
                    </div>
                    <h1 style="margin: 0; border: none; font-size: 2.5rem;">
                        <%= page.title %>
                    </h1>
                    <% if (page.status==='draft' && currentUser && currentUser.id===page.author_id) { %>
                        <button class="btn-publish" onclick="publishPage('<%= page.slug %>')">
                            <i class="ph ph-rocket-launch"></i>
                            Publish
                        </button>
                        <% } %>
                </div>
                <div class="article-actions" style="display: flex; gap: 0.75rem; align-items: center;">
                    <% if (currentUser) { %>
                        <div class="dropdown-container">
                            <button class="btn-dots" id="pageMenuTrigger">
                                <i class="ph ph-dots-three"></i>
                            </button>
                            <div class="slab-dropdown" id="pageMenu">
                                <a href="/wiki/<%= page.slug %>/edit" class="slab-menu-item">
                                    <i class="ph ph-pencil-simple"></i> Edit
                                </a>
                                <button class="slab-menu-item" onclick="toggleFavorite('<%= page.slug %>')">
                                    <i
                                        class="ph <%= page.isFavorite ? 'ph-star-fill' : 'ph-star' %> <%= page.isFavorite ? 'active-star' : '' %>"></i>
                                    <%= page.isFavorite ? 'Remove from favorites' : 'Add to favorites' %>
                                </button>
                                <button onclick="copyToClipboard('<%= page.slug %>')" class="slab-menu-item">
                                    <i class="ph ph-link"></i> Copy link
                                </button>
                                <a href="/wiki/<%= page.slug %>/history" class="slab-menu-item">
                                    <i class="ph ph-clock-counter-clockwise"></i> History
                                </a>
                                <button class="slab-menu-item" onclick="openMoveTopicModal('<%= page.slug %>')">
                                    <i class="ph ph-folder-notch-open"></i> Move to topic
                                </button>
                                <div class="slab-menu-divider"></div>
                                <form action="/wiki/<%= page.slug %>/delete" method="POST"
                                    onsubmit="return confirm('Delete this page permanently?')">
                                    <button type="submit" class="slab-menu-item danger">
                                        <i class="ph ph-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>

            <div class="meta-info"
                style="display: flex; align-items: center; gap: 1rem; margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                <div style="display: flex; align-items: center; gap: 0.4rem;">
                    <i class="ph ph-clock"></i>
                    Updated on <%= new Date(page.updated_at || page.created_at).toLocaleDateString() %>
                </div>
                <% if (page.category) { %>
                    <div style="display: flex; align-items: center; gap: 0.4rem;">
                        <i class="ph ph-tag"></i>
                        <a href="/categoria/<%= page.category %>"
                            style="color: var(--primary-color); text-decoration: none; font-weight: 500;">
                            <%= page.category %>
                        </a>
                    </div>
                    <% } %>
            </div>
        </div>

        <div class="wiki-content" style="line-height: 1.8; color: #2c3e50; font-size: 1.1rem;">
            <%- page.htmlContent %>
        </div>

        <% if (page.backlinks && page.backlinks.length> 0) { %>
            <section class="backlinks-section"
                style="margin-top: 5rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
                <h3
                    style="font-size: 0.9rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 1rem;">
                    Pages that link here</h3>
                <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
                    <% page.backlinks.forEach(function(link) { %>
                        <a href="/wiki/<%= link.slug %>" class="backlink-tag"
                            style="padding: 0.4rem 0.8rem; background: #f8f9fa; border: 1px solid var(--border-color); border-radius: 6px; font-size: 0.85rem; color: var(--primary-color); text-decoration: none; font-weight: 500;">
                            <%= link.title %>
                        </a>
                        <% }); %>
                </div>
            </section>
            <% } %>
    </article>

    <%- include('partials/layout_end') %>