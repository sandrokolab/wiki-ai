<%- include('partials/layout_start', { title: page.title }) %>

    <article class="wiki-article">
        <nav class="breadcrumb" style="font-size: 0.85rem; color: var(--text-muted); margin-bottom: 0.5rem;">
            <a href="/" style="color: inherit; text-decoration: none;">Wiki AI</a>
            <i class="ph ph-caret-right" style="font-size: 0.7rem; margin: 0 0.5rem;"></i>
            <% if (page.topic_name) { %>
                <a href="/categoria/<%= page.topic_name %>" style="color: inherit; text-decoration: none;">
                    <%= page.topic_name %>
                </a>
                <% } else if (page.category) { %>
                    <a href="/categoria/<%= page.category %>" style="color: inherit; text-decoration: none;">
                        <%= page.category %>
                    </a>
                    <% } %>
        </nav>

        <div class="article-header" style="margin-bottom: 2rem;">
            <div style="margin-bottom: 1rem;">
                <% if (page.topic_name) { %>
                    <a href="/categoria/<%= page.topic_name %>" class="topic-tag" style="background: <%= page.topic_color ? page.topic_color + '15' : 'rgba(99, 102, 241, 0.1)' %>; 
                              color: <%= page.topic_color || 'var(--primary-color)' %>;">
                        <i class="<%= page.topic_icon || 'ph ph-hash' %>"></i>
                        <%= page.topic_name %>
                    </a>
                    <% } %>
            </div>

            <div
                style="display: flex; justify-content: space-between; align-items: flex-start; gap: 2rem; margin-bottom: 1.5rem;">
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                    <h1 style="margin: 0; border: none; font-size: 2.75rem; font-weight: 800; letter-spacing: -0.02em;">
                        <%= page.title %>
                    </h1>
                    <% if (page.is_verified) { %>
                        <i class="ph ph-seal-check verified-icon" title="Verified"
                            style="color: var(--primary-color); font-size: 1.5rem;"></i>
                        <% } %>
                </div>
            </div>

            <!-- New Prominent Action Bar -->
            <div class="article-actions-bar">
                <% if (currentUser) { %>
                    <a href="/wiki/<%= page.slug %>/edit" class="action-btn" title="Edit Page">
                        <i class="ph ph-pencil-simple"></i>
                        Edit
                    </a>

                    <button onclick="toggleFavorite('<%= page.slug %>')"
                        class="action-btn <%= page.isFavorite ? 'active' : '' %>" id="favBtnMain">
                        <i class="ph <%= page.isFavorite ? 'ph-star-fill' : 'ph-star' %>"></i>
                        <%= page.isFavorite ? 'Saved' : 'Save' %>
                    </button>

                    <button onclick="document.getElementById('backlinks-area').scrollIntoView({behavior: 'smooth'})"
                        class="action-btn" title="Comments">
                        <i class="ph ph-chat-centered-text"></i>
                        Comment
                    </button>

                    <button onclick="copyToClipboard('<%= page.slug %>')" class="action-btn" title="Share Page">
                        <i class="ph ph-share-network"></i>
                        Share
                    </button>

                    <div class="dropdown-container" style="margin-left: auto;">
                        <button class="btn-dots" id="pageMenuTrigger" style="background: #f1f5f9;">
                            <i class="ph ph-dots-three"></i>
                        </button>
                        <div class="slab-dropdown" id="pageMenu">
                            <a href="/wiki/<%= page.slug %>/history" class="slab-menu-item">
                                <i class="ph ph-clock-counter-clockwise"></i> History
                            </a>
                            <button class="slab-menu-item" onclick="openMoveTopicModal('<%= page.slug %>')">
                                <i class="ph ph-folder-notch-open"></i> Move to topic
                            </button>
                            <% if (page.status==='draft' && currentUser.id===page.author_id) { %>
                                <button class="slab-menu-item" onclick="publishPage('<%= page.slug %>')"
                                    style="color: var(--primary-color);">
                                    <i class="ph ph-rocket-launch" style="color: var(--primary-color);"></i> Publish
                                </button>
                                <% } %>
                                    <div class="slab-menu-divider"></div>
                                    <form action="/wiki/<%= page.slug %>/delete" method="POST"
                                        onsubmit="return confirm('Delete this page permanently?')">
                                        <button type="submit" class="slab-menu-item danger">
                                            <i class="ph ph-trash"></i> Delete
                                        </button>
                                    </form>
                        </div>
                    </div>
                    <% } else { %>
                        <button onclick="copyToClipboard('<%= page.slug %>')" class="action-btn" title="Share Page">
                            <i class="ph ph-share-network"></i>
                            Share
                        </button>
                        <% } %>
            </div>

            <div class="meta-info"
                style="display: flex; align-items: center; gap: 1.5rem; font-size: 0.85rem; color: var(--text-muted); border-top: 1px solid var(--border-color); padding-top: 1rem;">
                <div style="display: flex; align-items: center; gap: 0.4rem;">
                    <i class="ph ph-clock"></i>
                    Updated on <%= new Date(page.updated_at || page.created_at).toLocaleDateString() %>
                </div>
                <% if (page.category) { %>
                    <div style="display: flex; align-items: center; gap: 0.6rem;">
                        <i class="ph ph-tag"></i>
                        <div style="display: flex; gap: 0.5rem;">
                            <% page.category.split(',').forEach(function(cat) { let tag=cat.trim(); if (tag) { %>
                                <a href="/categoria/<%= tag %>" class="label-pill">
                                    <%= tag %>
                                </a>
                                <% } }); %>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

        <div class="wiki-content" style="line-height: 1.8; color: #2c3e50; font-size: 1.1rem;">
            <%- page.htmlContent %>
        </div>

        <% if (page.backlinks && page.backlinks.length> 0) { %>
            <section class="backlinks-section" id="backlinks-area"
                style="margin-top: 5rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
                <h3
                    style="font-size: 0.9rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 1rem;">
                    Pages that link here</h3>
                <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
                    <% page.backlinks.forEach(function(link) { %>
                        <a href="/wiki/<%= link.slug %>" class="backlink-tag"
                            style="padding: 0.4rem 0.8rem; background: #f8f9fa; border: 1px solid var(--border-color); border-radius: 6px; font-size: 0.85rem; color: var(--primary-color); text-decoration: none; font-weight: 500;">
                            <%= link.title %>
                        </a>
                        <% }); %>
                </div>
            </section>
            <% } %>
    </article>

    <%- include('partials/layout_end') %>